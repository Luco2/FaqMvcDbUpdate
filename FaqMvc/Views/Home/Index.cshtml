@model GptWeb.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home";
}

<h1>@Model.Data</h1>

@if (Model.Faqs != null && Model.Faqs.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Answer</th>
                <th>Date Asked</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var faq in Model.Faqs)
            {
                <tr>
                    <td>@faq.Question</td>
                    <td>@faq.Answer</td>
                    <td>@faq.DateAsked.ToString("d")</td> <!-- Assuming DateAsked is a DateTime -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No FAQs available.</p>
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    @* <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> *@
    <link rel="stylesheet" href="~/css/modal.css">
    <link rel="stylesheet" href="~/css/site.css">

    <!-- Additional styles, if any -->
    @RenderSection("Styles", required: false)
</head>
<body>
       <!-- Modal -->
    <div class="modal fade show" id="universalModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" data-backdrop="static" aria-hidden="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <!-- Modal content here -->
                    @{
                        ViewBag.Title = "Ask a Question";
                    }

                    <h1>Ask a Question</h1>

                    @using (Html.BeginForm("AskQuestion", "Chat", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="prompt" class="your-question">Your Question:</label>
                            <input type="text" class="form-control" id="prompt" name="prompt" required
                                   placeholder="Type your question here..." aria-describedby="questionHelp" />
                            <small id="questionHelp" class="form-text text-muted">Please make sure your question is clear and concise.</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <!-- Other buttons or links can be added here if needed -->
                </div>
            </div>
        </div>
    </div>
    <header class="header">
        <!-- Navigation bar, logo, etc. -->
        <nav class="navbar">
            <div id="navbarNav">
                <ul>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Question", "Question", "Chat", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                        }
                        else
                        {
                            using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Logout</a>
                            }
                        }
                    </li>
                    <!-- Add other navigation links as needed -->
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer">
        <button type="button" class="modal-btn" onclick="showModal()">?</button>
        <!-- Footer content -->
        <p class="rights">© 2023 All Rights Reserved.</p>
    </footer>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function showModal() {
            var modal = document.querySelector(".modal");
            if (modal.style.display === "none") {
                modal.style.display = "block";
            } else {
                modal.style.display = "none";
            }
        }
    </script>

    <!-- Additional scripts, if any -->
    @RenderSection("Scripts", required: false)
</body>
</html>
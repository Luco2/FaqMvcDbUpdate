<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/modal.css">
    <link rel="stylesheet" href="~/css/site.css">

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Modal -->
    <div class="modal fade" id="universalModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" data-backdrop="static" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <!-- Modal content here -->
                    @{
                        ViewBag.Title = "Ask a Question";
                    }

                    <h1>Ask a Question</h1>

                    @using (Html.BeginForm("AskQuestion", "Chat", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="prompt" class="your-question">Your Question:</label>
                            <input type="text" class="form-control" id="prompt" name="prompt" required
                                   placeholder="Type your question here..." aria-describedby="questionHelp" />
                            <small id="questionHelp" class="form-text text-muted">Please make sure your question is clear and concise.</small>
                        </div>
                        <div>
                            Common questions: 
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-default">Cancel</a>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <!-- Other buttons or links can be added here if needed -->
                </div>
            </div>
        </div>
    </div>

        <button class="modal-btn" onclick="showModal()">?</button>
        <!-- Navigation bar, logo, etc. -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <form action="@Url.Action("Logout", "Account")" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link">Logout</button>
                        </form>
                    </li>
                }
                <!-- Add other navigation links as needed -->
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer fixed-bottom">
        <!-- Footer content -->
    </footer>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function showModal() {
            $("#universalModal").modal('show'); // Fixed the ID to match the modal's ID
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

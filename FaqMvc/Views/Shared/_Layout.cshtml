<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- Custom styles -->
    <style>

        *, html {
            font-family: system-ui,-apple-system,system-ui,"Segoe UI",Roboto,Ubuntu,"Helvetica Neue",sans-serif;
            color: black;
        }

        /* .header, .footer {
            background-color: #052641;
            padding: 1em;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 5em;
            border: solid 1px #052641;
        } */

        .header{
            background-size: cover;
            background-position: center;
            background-color: #052641;
            align-items: center;
            border: 1px solid black;
        }

        .footer {
            background-color: #052641;
            padding: 1em;
            text-align: center;
            border: solid 1px #052641;
        }

        .nav-link {
            border: 1px solid #052641;
            border-radius: 0;
            padding: 1em 1.3em;
            font-size: 1.1em;
            cursor: pointer;
            display: inline-block;
            text-decoration: none;
            transition: all .3s;
            user-select: none;
            color: black;
            background-color: white;
        }

        #navbarNav {
            padding: 1em 1.3em;
            font-size: 1.1em;
            text-decoration: none;
            color: black;
        }

        h1 {
            margin-top: 0em;
            margin-bottom: 10.1em;
        }

        .container.mt-4 {
            background-size: cover;
            background-position: center;
            align-items: center;
            border: 1px solid black;
            margin-top: -100em;
            margin-bottom: 18.2em;
        }

        .btn{
            background-color: #f5f5f5;
            border: 1px solid #d4d4d4;
            border-radius: 5px;
            padding: 0.5em 1em;
            font-family: Arial, sans-serif;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none;
            color: black;
        }

        .link {
            background-color: transparent;
            border: 1px solid black;
            border-radius: 5px;
            padding: 0.5em 1em;
            font-family: Arial, sans-serif;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s;
            text-decoration: none;
            color: black;
        }

        .nav-link a{
            background-color: white;
        }

        .btn:hover, .nav-link:hover {
                box-shadow: gray, rgba(0, 0, 0, .1) 0 3px 5px, rgba(0, 0, 0, .1) 0 10px 13px;
                transform: scale(1.05);
                color: black;
                text-decoration: none;
            }

        .link:hover {
            color: black;
            text-decoration: none;
        }

        /* .btn, .nav-link, .link {
            text-decoration: none;
            color: black;
            border: 1px black;           
           
        } */

        .rights {
            color:white;
        }

    </style>

    <!-- Additional styles, if any -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
        <!-- Navigation bar, logo, etc. -->
        <nav class="navbar">
            <div id="navbarNav">
                <ul >
                    <li class="nav-link">
                        <a class="nav-link link" href="/">Home</a>
                        @Html.ActionLink("Question", "Question", "Chat", null, new { @class = "nav-link link" })

                        @if (!User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link link" })
                        }
                        else
                        {
                            <form action="@Url.Action("Logout", "Account")" method="post">
                                @Html.AntiForgeryToken()
                                <button type="btn">Logout</button>
                            </form>
                        }
                    </li>
                    <!-- Add other navigation links as needed -->
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer">
        <!-- Footer content -->
        <p class="rights">© 2023 All Rights Reserved.</p>
    </footer>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Additional scripts, if any -->
    @RenderSection("Scripts", required: false)
</body>
</html>

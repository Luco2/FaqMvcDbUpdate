@{
    ViewBag.Title = "Ask a Question";
}

<h1>Ask a Question</h1>

<form method="post" action="@Url.Action("AskQuestion", "Chat")">
    <div class="form-group">
        <label for="prompt" class="your-question">Your Question:</label>
        <input type="text" class="form-control" id="prompt" name="prompt" required />
    </div>
    <button type="submit" class="btn">Submit</button>
</form>
